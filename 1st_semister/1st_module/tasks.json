{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build with MinGW",
			"type": "shell",
			"command": "gcc",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"],
			"detail": "Compiling with MinGW..."
		}
	]
}
